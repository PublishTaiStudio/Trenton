        {
            "title": "Paramètres",
            "content": [
                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Les paramètres requis pour le fichier <code>config.json</code> sont:"
                },
                {
                    "component": "list",
                    "content": [
                        "title: Le titre de votre page",
                        "description: La description de votre page"
                    ]
                },
                
                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Le code de base:"
                },
                {
                    "component" : "code",
                    "lang": "json",
                    "code": "{\"name\": \"name of page\",\"favicon\": \"the icon of the page\",\"template\": \"choose one in list\",\"colors\": [\"not used\"],\"content\": [{\"title\": \"Skills\",\"content\": []}]}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Separateur</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\" : \"separator\",\"mode\": \"invisible\", \"height\": \"10px\"}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Texte</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\" : \"text\",\"text\": \"votre text\",\"mode\": \"title\"}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Image</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\": \"image\",\"url\": \"https://lyna.netlify.app/pages/home/lyna.png\",\"text\": \"Image de profile\",\"mode\": \"circle center\",\"width\": \"500px\"}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Carte</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\" : \"card\",\"title\": \"React\",\"background\": [\"https://lyna.netlify.app/pages/home/lyna.png\"],\"buttons\": [{\"text\": \"HTML\",\"url\": \"/\"}]}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Liste</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\" : \"list\",\"mode\": \"summary\",\"content\": [\"ligne 1\",\"ligne 2\"]}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Bouton</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\" : \"button\",\"text\": \"Demo\",\"url\": \"https://trenton.netlify.app/tetsuyuki\",\"mode\": \"highlight\"}"
                },

                {
                    "component" : "separator"
                },
                {
                    "component" : "text",
                    "text": "Composant <code>Boutons</code>:"
                },
                {
                    "component": "code",
                    "lang": "json",
                    "code": "{\"component\": \"buttons\",\"buttons\": [{\"text\": \"Trenton\",\"url\": \"https://trenton.netlify.app\",\"mode\": \"gold\"},{\"text\": \"Youtube\",\"url\": \"https://youtube.com\"}]}"
                }
            ]
